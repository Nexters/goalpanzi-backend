<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="COLORED_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss} %green([%thread]) %highlight(%5level) %yellow(%logger{36}) - %msg%n"/>
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %5level %logger{36} - %msg%n"/>
    <property name="FILE_NAME" value="/logs/api-server.log"/>
    <property name="FILE_NAME_PATTERN" value="/logs/api-server.{yyyy-MM-dd}.%d.log"/>
    <property name="MAX_HISTORY" value="3"/>
    <property name="MAX_SIZE" value="5KB"/>
    <property name="TOTAL_SIZE_CAP" value="10MB"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${COLORED_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${FILE_NAME}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${FILE_NAME_PATTERN}</fileNamePattern>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <maxSize>${MAX_SIZE}</maxSize>
            <totalSizeCap>${TOTAL_SIZE_CAP}</totalSizeCap>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>5KB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <logger name="com.nexters.goalpanzi" level="WARN">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="com.nexters.goalpanzi" level="ERROR">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
